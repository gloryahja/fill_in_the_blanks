<%-#Display all of your posts here %>
<h1>The Cape Town Teachers</h1>
<% @posts.each do |post| %>
	<p><h3><%= link_to post.bru_name, post_path(post) %></h3></p>
	<p><%=	post.title %></p>
	<p><%=	post.body %></p>
<%= link_to "All Posts", "/posts" %>
<%= link_to "Edit", edit_post_path(post) %>
<%= link_to "Delete", post_path(post), method: :delete, data: {confirm: "REALLY?"} %>
<% end %>




<p><%= link_to "New Bru", "/posts/new" %></p>



